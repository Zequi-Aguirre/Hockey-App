<h1>Log In</h1>

<form action="/auth/login" method="POST">
  <label>
    Email
    <input type="text" name="email" />
  </label>
  <br />
  <label>
    Password
    <input type="password" name="password" />
  </label>
  <br />

  <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}
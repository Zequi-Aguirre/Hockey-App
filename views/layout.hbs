<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/all-results.css" />
  </head>
  <body>
    <header>
      <a href="/">
        <img src="#" alt="logo" />
      </a>
      <nav>
        <ul>
          {{#if theUser}}
            <li><a href="/auth/your-teams/{{theUser._id}}">Your Teams</a></li>
            <li><a href="/auth/profile">Profile</a></li>
            <li><a href="/auth/logout">Log Out</a></li>

          {{else}}
            <li><a href="/auth/signup">Sign Up</a></li>
            <li><a href="/auth/login">Log In</a></li>
          {{/if}}
        </ul>
      </nav>
    </header>
    {{#if errorMessage}}
      <div class="error-div">
        {{errorMessage}}
      </div>
    {{/if}}

    {{#if successMessage}}
      <div class="success-div">
        {{successMessage}}
      </div>
    {{/if}}
    {{#if theUser.admin}}

      <h3>Admin Routes</h3>

      <ul class="admin-buttons">

        <li><a
            class="admin-filter-buttons"
            data-adminfilter="all-teams"
            href="/auth/admin/all-teams"
          >All Teams</a></li>
        <li><a
            class="admin-filter-buttons"
            data-adminfilter="all-players"
            href="/auth/admin/all-players"
          >All Players</a></li>
        <li><a
            class="admin-filter-buttons"
            data-adminfilter="all-games"
            href="/auth/admin/all-games"
          >All Games</a></li>
        <li><a
            class="admin-filter-buttons"
            data-adminfilter="all-users"
            href="/auth/admin/all-users"
          >All Users</a></li>
        <li><a class="admin-filter-buttons" href="/season/create-season">Create
            Season</a></li>
      </ul>
    {{/if}}

    {{{body}}}

    <script src="/js/script.js"></script>
    <script src="/js/all-games.js"></script>

  </body>

</html>
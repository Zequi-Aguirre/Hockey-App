<table width="90%" border="1" cellspacing="1" cellpadding="3">

  <thead>
    <tr class="fields">
      <td width=".10vh" align="left">Div</td>
      <td width=".25vh" align="left">Home</td>
      <td width=".25vh" align="left">Away</td>
      <td width=".30vh">Date</td>
      <td width=".10vh">Time</td>
      <td nowrap="" align="right" width=".21vh">Rink/GS</td>
    </tr>
  </thead>

  <tbody id="allGames">

    {{#each games}}

      <tr class="game-container {{this.division}}">
        <td class="gameInfo">{{this.division}}</td>
        <td class="gameInfo"><a href="#">{{this.homeTeam.teamName}}</a></td>
        <td class="gameInfo"><a href="#">{{this.awayTeam.teamName}}</a></td>
        <td class="gameInfo" align="center">{{this.date}}</td>
        <td class="gameInfo">{{this.time}}</td>
        <td class="gameInfo">{{this.location}}</td>

      </tr>

